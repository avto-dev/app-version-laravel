{
    "name": "avto-dev/app-version-laravel",
    "description": "Laravel applications versioning",
    "keywords": [
        "laravel",
        "version"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "avto-dev",
            "homepage": "https://github.com/avto-dev"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "illuminate/contracts": ">=5.4.0 <5.9.0",
        "illuminate/support": ">=5.4.0 <5.9.0",
        "illuminate/view": ">=5.4.0 <5.9.0"
    },
    "require-dev": {
        "laravel/laravel": ">=5.4.0 <5.9.0",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.11.3",
        "phpunit/phpunit": "^6.4 || ~7.5"
    },
    "autoload": {
        "psr-4": {
            "AvtoDev\\AppVersion\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AvtoDev\\AppVersion\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpunit": "@php ./vendor/bin/phpunit --no-coverage --colors=always",
        "phpunit-feature": "@php ./vendor/bin/phpunit --no-coverage --colors=always",
        "phpunit-cover": "@php ./vendor/bin/phpunit --coverage-html='./coverage/html'",
        "phpstan": "@php ./vendor/bin/phpstan analyze -c ./phpstan.neon.dist --no-progress --ansi",
        "test": [
            "@phpstan",
            "@phpunit"
        ],
        "test-cover": [
            "@phpstan",
            "@phpunit-cover"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "AvtoDev\\AppVersion\\ServiceProvider"
            ],
            "aliases": {
                "AppVersionFacade": "AvtoDev\\AppVersion\\AppVersionFacade"
            }
        }
    },
    "support": {
        "issues": "https://github.com/avto-dev/app-version-laravel/issues",
        "source": "https://github.com/avto-dev/app-version-laravel"
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}
